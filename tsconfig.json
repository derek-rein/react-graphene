{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "removeComments": true,
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Use Vite for emit, tsc only for type checking
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Library specific */
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true, // tsc only emits declaration files
    "outDir": "dist"
  },
  "include": [
    "src",
    "stories"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}